{
    "name": "FoxyProxy Standard",
    "version": "2.3",
    "manifest_version": 2,

    "description": "FoxyProxy simplifies configuring browsers to access proxy-servers, offering more features than other proxy-plugins",
    "homepage_url": "http://getfoxyproxy.org/",
    "icons": {
	"16": "images/foxyproxy-nocopy.gif",
	"48": "images/logo-48.png",
	"128": "images/logo-128.png"
    },

    "browser_action": {
	"default_icon": "images/foxyproxy-nocopy.gif",
	"default_title": "FoxyProxy",
	"default_popup" : "popup.html"
    },

    "background": {"page": "background.html"},

    "content_scripts": [ 
	{
	    "all_frames": false,
	    "js": [ "js/jquery-1.7.2.min.js", "js/content.js"],
	    "matches": [ "<all_urls>" ],
	    "run_at": "document_idle"
	},{
	    "all_frames": true,
	    "js": ["js/contentLog.js"],
	    "matches": [ "<all_urls>" ],
	    "run_at": "document_start"
	}
    ],

    "sandbox": {
        "pages": ["pac-sandbox.html"]
    },

    "options_page": "options.html",
    "permissions": [
        "background",
	"tabs",			
	"contextMenus",		
	"management",		
	"proxy",
        "<all_urls>"
    ]
}
