{
	// manifest following http://code.google.com/chrome/extensions/manifest.html for easier reading
	// Required
	"name": "FoxyProxy Standard",
	"version": "1.1.0",

	// Recommended
	"description": "FoxyProxy simplifies configuring browsers to access proxy-servers, offering more features than other proxy-plugins",
	"homepage_url": "http://getfoxyproxy.org/",
	"icons": {
		"16": "images/foxyproxy-nocopy.gif",
		"48": "images/logo-48.png",
		"128": "images/logo-128.png"
	},

	// Pick one (or none)
	"browser_action": {
		"default_icon": "images/foxyproxy-nocopy.gif",
		"default_title": "FoxyProxy",
		"default_popup" : "popup.html"
	},

	// Add any of these that you need
	"background_page": "background.html",
	// Figure out why the addon depends on these this day
	"content_scripts": [ 
		{
		"all_frames": false,
		"js": [ "js/jquery-1.4.4.min.js", "js/content.js"],
		"matches": [ "<all_urls>" ],
		"run_at": "document_idle"
		},{
		"all_frames": true,
		"js": ["js/contentLog.js"],
		"matches": [ "<all_urls>" ],
		"run_at": "document_start"
		}
	],
	"options_page": "options.html",
	"permissions": [
		"tabs",				// Required if the extension uses the chrome.tabs or chrome.windows module. 
		"<all_urls>",		// Gives access to all websites being accessed by chrome
		"contextMenus",		// Required if the extension uses the chrome.contextMenus module. 
		"management",		// Required if the extension uses the chrome.management module. 
		"proxy", 			// Required if the extension uses the chrome.proxy module. 
		"background",		// Makes Chrome start up early and and shut down late, so that apps and extensions can have a longer life. 
		"unlimitedStorage"	// Provides an unlimited quota for storing HTML5 client-side data, such as databases and local storage files. Without this permission, the extension is limited to 5 MB of local storage. 
	],
}
