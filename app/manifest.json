{
    "name": "FoxyProxy Standard",
    "version": "3.0",
    "manifest_version": 2,
    "default_locale": "en",
    "description": "FoxyProxy simplifies configuring browsers to access proxy-servers, offering more features than other proxy-plugins",
    "homepage_url": "http://getfoxyproxy.org/",
    "icons": {
        "16": "images/16x16.png",
        "48": "images/logo-48.png",
        "128": "images/logo-128.png"
    },
    "minimum_chrome_version": "21",
    "browser_action": {
        "default_icon": "images/foxyproxy-nocopy.gif",
        "default_title": "FoxyProxy",
        "default_popup": "popup.html"
    },
    "background": {
        //"page": "background.html",
        "persistent": false,
        "scripts": [
            "scripts/background.js",
            "scripts/util.js",
            "vendor/scripts/punycode.js",
            "scripts/proxyconfig.js",
            "scripts/proxy.js",
            "scripts/proxyManager.js",
            "scripts/extension.js",
            "scripts/settings.js"
        ]
    },
    "content_scripts": [

    ],/*
    "sandbox": {
        "pages": [
            "pac-sandbox.html"
        ]
    },*/
    "options_page": "options.html",
    "permissions": [
        "background",
        "tabs",
        "contextMenus",
        "management",
        "proxy",
        "storage",
        "<all_urls>"
    ]
}